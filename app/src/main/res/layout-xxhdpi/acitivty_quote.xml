<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/fullscreen_content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:tag="layout-xxhdpi"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        />

    <View
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/bubble_pivot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="8dp"
        android:id="@+id/quote_bubble"
        android:gravity="center"
        android:padding="6dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"
            android:src="@drawable/bubble"
            />

        <!--android:background="@drawable/bubble"-->
        <TextView
            android:text="To err is human, to forgive is divine. and we call need love from some very large quote?"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/quote_text"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:paddingTop="12dp"
            android:paddingBottom="32dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp"
            />
    </RelativeLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/prev"
        />

    <ImageView
        android:soundEffectsEnabled="false"
        android:adjustViewBounds="true"
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/buddha"
        android:layout_marginBottom="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="240dp"
        />

    <ImageView
        android:id="@+id/about"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="170dp"
        />

    <ImageView
        android:id="@+id/audio_switch"
        app:srcCompat="@drawable/ic_volume_up"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="110dp"
        />
</RelativeLayout>